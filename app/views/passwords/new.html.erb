<div class="container mt-5" style="max-width: 400px;">
  <div class="card shadow">
    <div class="card-body">
      <h4 class="card-title text-center mb-4">Forgot your password?</h4>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= form_with url: passwords_path, html: { class: 'needs-validation' } do |form| %>
        <div class="mb-3">
          <%= form.label :email_address, "Email", class: "form-label" %>
          <%= form.email_field :email_address, class: "form-control", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %>
        </div>

        <div class="d-grid">
          <%= form.submit "Email reset instructions", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
